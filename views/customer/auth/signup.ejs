<head>
  <%- include('../../shared/includes/head', {pageTitle: 'Signup'}) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
      <h1>Create New Account</h1>
      <% if (inputData.errorMessage) {  %>
       <section class="alert">
       <h2>Invalid Input</h2>
       <p><%= inputData.errorMessage %></p>
       </section>
     <%  } %>
      <form action="/signup" method="POST"> <!-- Changed method="/POST" to method="POST" -->
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <p>
              <label for="email">E-Mail</label>
              <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
          </p>
          <p>
              <label for="confirm-email">Confirm-Email</label>
              <input type="email" id="confirm-email" name="confirm-email" <%= inputData.confirmEmail %>" required> <!-- Corrected name attribute -->
          </p>
          <p>
              <label for="password">Password</label>
              <input type="password" id="password" name="password" minlength="5" <%= inputData.password %>" required>
          </p>
          <hr>
          <p> <!-- Added missing opening <p> tag -->
              <label for="fullname">Full Name</label>
              <input type="text" id="fullname" name="fullname" <%= inputData.fullname %>" required>
          </p>
          <p>
              <label for="street">Street</label>
              <input type="text" id="street" name="street" <%= inputData.street %>" required>
          </p>
          <p>
              <label for="postal">Postal Code</label>
              <input type="text" id="postal" name="postal" minlength="6" maxlength="6" <%= inputData.postal %>" required>
          </p>
          <p>
              <label for="city">City</label>
              <input type="text" id="city" name="city" <%= inputData.city %>" required>
          </p>
          <button class="btn">Create Account</button>
          <p id="switch-form"><a href="/login">Login instead</a></p>
      </form>
  </main>
  <%- include('../../shared/includes/footer') %> <!-- Removed extra single quote at the end -->
</body>
